<% if @building.errors.any? %>
	<div class="alert alert-danger">
		<strong>Form is invalid.</strong><br />
		<ul>
			<% for message in @building.errors.full_messages %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for @building, html: {:novalidate => "novalidate", name: "newBuildingForm", class: "form-horizontal" } do |f| %>
	<div class="form-group" ng-class="{'has-error':newBuildingForm['building[name]'].$dirty && newBuildingForm['building[name]'].$invalid }">
		<%= f.label :name, :class => "col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_field :name, :class => "form-control", :placeholder => "Name", :"ng-model" => "name", :"ng-required" => true %>
			<span class="error-message" ng-show="newBuildingForm['building[name]'].$dirty && newBuildingForm['building[name]'].$invalid">Name is required.</span>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :address, :class => "col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_area :address, :placeholder => "Address", :class => "form-control" %>
		</div>
	</div>
	<div class="col-sm-9 col-sm-offset-3">
		<%= f.submit :class => "btn btn-lg btn-primary", :"ng-disabled" => "newBuildingForm.$invalid"%>
	</div>
<% end %>