<div class="row">
	<div class="col-sm-12">
		<% if flash[:notice] %>
			<div class="alert alert-success"><%= flash[:notice] %></div>
		<% elsif flash[:alert] %>
			<div class="alert alert-danger"><%= flash[:alert] %></div>
		<% end %>
		
		<h3>Buildings</h3>
		<p class="text-right"><%= link_to "Create Building", new_building_path %></p>
		<% if @buildings.length > 0 %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th colspan="2">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @buildings.each do |building| %>
						<tr>
							<td><%= building.name %></td>
							<td><%= link_to "Edit", edit_building_path(building.id) %></td>
							<td><%= link_to "Delete", building_path(building.id), confirm: "Are you sure?", method: :delete %></td>
						</tr>
					<% end %>
					
				</tbody>
			</table>
		<% else %>
			<p>Currently there are no buildings available</p>
		<% end %>
	</div>
</div>