<div class="row">
	<div class="col-sm-12">
		<% if flash[:notice] %>
			<div class="alert alert-success"><%= flash[:notice] %></div>
		<% elsif flash[:alert] %>
			<div class="alert alert-danger"><%= flash[:alert] %></div>
		<% end %>
		
		<h3>Tipi di Contratto</h3>
		<p class="text-right"><%= link_to "Creare Tipo di Contratto", new_contract_path %></p>
		<% if @contracts.length > 0 %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Tipo</th>
						<th>ISTAT</th>
						<th colspan="2">Azioni</th>
					</tr>
				</thead>
				<tbody>
					<% @contracts.each do |contract| %>
						<tr>
							<td><%= contract.name %></td>
							<td><%= number_to_percentage(contract.istat) %></td>
							<td><%= link_to "Modificare", edit_contract_path(contract.id) %></td>
							<td><%= link_to "Cancellare", contract_path(contract.id), :"data-confirm" => "Sei securo?", method: :delete %></td>
						</tr>
					<% end %>
					
				</tbody>
			</table>
		<% else %>
			<p>Attualmente non ci sono tipi di contratto disponibili</p>
		<% end %>
	</div>
</div>