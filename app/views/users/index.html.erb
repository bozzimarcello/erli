<div class="row">
	<div class="col-sm-12">
		<% if flash[:notice] %>
			<div class="alert alert-success"><%= flash[:notice] %></div>
		<% elsif flash[:alert] %>
			<div class="alert alert-danger"><%= flash[:alert] %></div>
		<% end %>
		
		<h3>Administrators</h3>
		<p class="text-right"><%= link_to "Create Administrator", new_user_path %></p>
		<% if @users.length > 0 %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th colspan="3">Actions</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= user.name %></td>
							<td><%= user.email %></td>
							<td><%= link_to "Edit", edit_user_path(user.id) %></td>
							<td><%= link_to "Delete", user_path(user.id), confirm: "Are you sure?", method: :delete %></td>
							<% if user.active? %>
								<td>Deactivate</td>
							<% else %>
								<td>Activate</td>
							<% end %>
						</tr>
					<% end %>
					
				</tbody>
			</table>
		<% else %>
			<p>Currently there are no administrators available</p>
		<% end %>
	</div>
</div>