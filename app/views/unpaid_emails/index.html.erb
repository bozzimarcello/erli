<div class="row">
	<div class="col-sm-12">
		<% if flash[:notice] %>
			<div class="alert alert-success"><%= flash[:notice] %></div>
		<% elsif flash[:alert] %>
			<div class="alert alert-danger"><%= flash[:alert] %></div>
		<% end %>
		
		<h3>Email non Pagati</h3>
		<p class="text-right"><%= link_to "Creare Email non Pagato", new_unpaid_email_path %></p>
		<% if @emails.length > 0 %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Testo</th>
						<th>Giorni</th>
						<th>Frequenza</th>
						<th colspan="2">Azioni</th>
					</tr>
				</thead>
				<tbody>
					<% @emails.each do |email| %>
						<tr>
							<td><%= truncate(email.body, :length => 50) %></td>
							<td><%= email.days %></td>
							<td><%= email.frequency %></td>
							<td><%= link_to "Modificare", edit_unpaid_email_path(email.id) %></td>
							<td><%= link_to "Cancellare", unpaid_email_path(email.id), :"data-confirm" => "Sei securo?", method: :delete %></td>
						</tr>
					<% end %>
					
				</tbody>
			</table>
		<% else %>
			<p>Attualmente non ci sono email non pagati disponibili</p>
		<% end %>
	</div>
</div>