<div class="row">
	<div class="col-sm-12">
		<% if flash[:notice] %>
			<div class="alert alert-success"><%= flash[:notice] %></div>
		<% elsif flash[:alert] %>
			<div class="alert alert-danger"><%= flash[:alert] %></div>
		<% end %>
		
		<h3>Appartamenti</h3>
		<p class="text-right"><%= link_to "Creare Appartamento", new_apartment_path %></p>
		<% if @apartments.length > 0 %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Nome</th>
						<th>Aggiornato</th>
						<th>Creato</th>
						<th colspan="2">Azioni</th>
					</tr>
				</thead>
				<tbody>
					<% @apartments.each do |apartment| %>
						<tr>
							<td><%= apartment.name %></td>
							<td><%= apartment.updated_at.strftime("%d-%m-%Y") %></td>
							<td><%= apartment.created_at.strftime("%d-%m-%Y") %></td>
							<td><%= link_to "Modificare", edit_apartment_path(apartment.id) %></td>
							<td><%= link_to "Cancellare", apartment_path(apartment.id), :"data-confirm" => "Sei securo?", method: :delete %></td>
						</tr>
					<% end %>
					
				</tbody>
			</table>
		<% else %>
			<p>Attualmente non ci sono appartamenti disponibili</p>
		<% end %>
	</div>
</div>