<% if @bollo && @bollo.errors.any? %>
	<div class="alert alert-danger">
		<strong>La forma non è valida.</strong><br />
		<ul>
			<% for message in @bollo.errors.full_messages %>
				<li><%= message %> (<%= @bollo.identifier %>)</li>
			<% end %>
		</ul>
	</div>
<% end %>

<p>Inserisci un intervallo</p>
<%= form_tag({:controller => "bollos", :action => "create"}, :novalidate => "novalidate", :name => "newBolloForm", :class => "form-horizontal") do %>
	<div class="form-group" ng-class="{'has-error':newBolloForm[from].$dirty && newBolloForm[from].$invalid }">
		<%= label_tag "from", "Da Numero", :class => "col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= text_field_tag "from", nil, :class => "form-control", :placeholder => "Da", :"ng-model" => "from", :"ng-required" => true %>
			<span class="error-message" ng-show="newBolloForm[from].$dirty && newBolloForm[from].$invalid">'Da' è richiesto.</span>
		</div>
	</div>
	<div class="form-group" ng-class="{'has-error':newBolloForm[to].$dirty && newBolloForm[to].$invalid }">
		<%= label_tag "to", "A Numero", :class => "col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= text_field_tag "to", nil, :class => "form-control", :placeholder => "A", :"ng-model" => "to", :"ng-required" => true %>
			<span class="error-message" ng-show="newBolloForm[to].$dirty && newBolloForm[to].$invalid">'A' è richiesto.</span>
		</div>
	</div>
	<div class="form-group" ng-class="{'has-error':newBolloForm.price.$dirty && newBolloForm.price.$invalid }">
		<%= label_tag "price", "Prezzo", :class => "col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= text_field_tag "price", nil, :class => "form-control", :placeholder => "Prezzo", :"ng-model" => "price", :"ng-required" => true %>
			<span class="error-message" ng-show="newBolloForm.price.$dirty && newBolloForm.price.$invalid">Prezzo è richiesto.</span>
		</div>
	</div>
	<div class="col-sm-9 col-sm-offset-3">
		<%= submit_tag "Creare", :class => "btn btn-lg btn-primary", :"ng-disabled" => "newBolloForm.$invalid"%>
	</div>
<% end %>