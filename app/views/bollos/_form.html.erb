<% if @range && @range.errors.any? %>
	<div class="alert alert-danger">
		<strong>La forma non è valida.</strong><br />
		<ul>
			<% for message in @range.errors.full_messages %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>

<%= form_for(@range, :html => {:novalidate => "novalidate", :name => "newBolloForm", :class => "form-horizontal"}) do |f|%>
	<p class="col-sm-12"><strong>Inserisci un intervallo</strong></p>
	<div class="form-group">
		<div ng-class="{'has-error':newBolloForm[from].$dirty && newBolloForm[from].$invalid }">
			<%= f.label :from, "Da Numero", :class => "col-sm-3 control-label" %>
			<div class="col-sm-3">
				<%= f.text_field :from, :class => "form-control", :placeholder => "Da", :"ng-model" => "from", :"ng-required" => true %>
				<span class="error-message" ng-show="newBolloForm[from].$dirty && newBolloForm[from].$invalid">'Da' è richiesto.</span>
			</div>
		</div>
		<div ng-class="{'has-error':newBolloForm[to].$dirty && newBolloForm[to].$invalid }">
			<%= f.label :to, "A Numero", :class => "col-sm-2 control-label", :style => "text-align:left;" %>
			<div class="col-sm-3">
				<%= f.text_field :to, :class => "form-control", :placeholder => "A", :"ng-model" => "to", :"ng-required" => true %>
				<span class="error-message" ng-show="newBolloForm[to].$dirty && newBolloForm[to].$invalid">'A' è richiesto.</span>
			</div>
		</div>
	</div>
	<div class="form-group" ng-class="{'has-error':newBolloForm.price.$dirty && newBolloForm.price.$invalid }">
		<%= f.label :price, "Prezzo", :class => "col-sm-3 control-label" %>
		<div class="col-sm-9">
			<%= f.text_field :price, :class => "form-control", :placeholder => "Prezzo", :"ng-model" => "price", :"ng-required" => true %>
			<span class="error-message" ng-show="newBolloForm.price.$dirty && newBolloForm.price.$invalid">Prezzo è richiesto.</span>
		</div>
	</div>
	<div class="col-sm-9 col-sm-offset-3">
		<%= submit_tag "Creare", :class => "btn btn-lg btn-primary", :"ng-disabled" => "newBolloForm.$invalid"%>
	</div>
<% end %>