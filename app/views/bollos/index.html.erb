<div class="row">
	<div class="col-sm-12">
		<% if flash[:notice] %>
			<div class="alert alert-success"><%= flash[:notice] %></div>
		<% elsif flash[:alert] %>
			<div class="alert alert-danger"><%= flash[:alert] %></div>
		<% end %>
		
		<h3>Bollos</h3>
		<p class="text-right"><%= link_to "Creare Bollos", new_bollo_path %></p>
		<% if @bollos.length > 0 %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Numero</th>
						<th>Prezzo</th>
						<th>Fattura</th>
						<th colspan="2">Azioni</th>
					</tr>
				</thead>
				<tbody>
					<% @bollos.each do |bollo| %>
						<tr>
							<td><%= bollo.identifier %></td>
							<td><%= number_to_currency(bollo.price, :locale => :it) %></td>
							<td>Fattura non e disponibile</td>
							<td><%= link_to "Modificare", edit_bollo_path(bollo.id) %></td>
							<td><%= link_to "Cancellare", bollo_path(bollo.id), confirm: "Sei securo?", method: :delete %></td>
						</tr>
					<% end %>
					
				</tbody>
			</table>
			<%= will_paginate @bollos %>
		<% else %>
			<p>Attualmente non ci sono bollos disponibili</p>
		<% end %>
	</div>
</div>