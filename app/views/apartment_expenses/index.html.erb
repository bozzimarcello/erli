<div class="row" ng-controller="apartmentExpensesController">
	<div class="col-sm-12">
		<% if flash[:notice] %>
			<div class="alert alert-success"><%= flash[:notice] %></div>
		<% elsif flash[:alert] %>
			<div class="alert alert-danger"><%= flash[:alert] %></div>
		<% end %>
		
		<h3>Spese di Appartamento</h3>
		<% if @apartments.length > 0 %>
			<table class="table table-collapsed">
				<thead>
					<tr>
						<th></th>
						<th>Numero di Appartamento</th>
						<th>Numero di Locazioni</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @apartments.each do |apartment| %>
						<tr class="info">
							<td>
								<% if apartment.asset_expenses.size > 0 %>
									<a href="#" class="toggle-table"><small class="glyphicon glyphicon-plus" aria-hidden="true"></small>		<% end %>
							</td>
							<td><%= apartment.name %></td>
							<td><%= apartment.active_leases.size %></td>
							<td><%= link_to "Nuova spesa", "#", :"data-placement" => "left", :"data-template" => new_apartment_apartment_expense_path(apartment.id), :title => "Nuova spesa per #{apartment.name}", :"data-auto-close" => "1", :"bs-popover" => "popover" %></td>
						</tr>
						<% if apartment.asset_expenses.size > 0%>
							<tr class="child-table">
								<td colspan="4">
									<table class="table table-condensed table-striped" style="margin-left:5px;margin-bottom:0px;">
										<thead>
											<tr>
												<th>Nome</th>
												<th>Quantita</th>
												<th>Aggiornata</th>
												<th colspan="2">Azioni</th>
											</tr>
										</thead>
										<tbody>
											<% apartment.asset_expenses.each do |expense| %>
												<tr>
													<td><%= expense.expense.name %></td>
													<td><%= number_to_currency(expense.amount) %></td>
													<td><%= expense.updated_at.strftime("%d-%m-%Y")%></td>
													<td><%= link_to "Aggiornare", edit_apartment_apartment_expense_path(apartment.id, expense.id) %>
													<td><%= link_to "Cancellare", apartment_apartment_expense_path(apartment.id, expense.id), :"data-confirm" => "Sei securo?", method: :delete %></td>
												</tr>
											<% end %>
										</tbody>
									</table>
								</td>
							</tr>
						<% end %>
					<% end %>
					
				</tbody>
			</table>
		<% else %>
			<p>Attualmente non ci sono spese disponibili</p>
		<% end %>
	</div>
</div>